@model BookWeb.Entities.Author
@{
    ViewData["Title"] = "Authors";
}
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                        <a class="logo" href="index.html">
                            <img src="images/icon/logo.png" alt="CoolAdmin" />
                        </a>
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        </header>
        <div class="page-container">
            <div class="content-body">
                <!-- Basic Inputs start -->
                <section class="basic-inputs">
                    <div class="row match-height">
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Create New Author</h4>
                                </div>
                                <form asp-action="Create" method="post" class="mt-4">
                                    <div class="card-block">
                                        <div class="card-body">
                                            <fieldset class="form-group">
                                                <input type="text" asp-for="Title" placeholder="Title" class="form-control" id="basicInput">
                                            </fieldset><br />
                                            <fieldset class="form-group">
                                                <input type="text" asp-for="Name" placeholder="Enter Author Name" class="form-control" id="basicInput">
                                            </fieldset><br />
                                            <fieldset class="form-group">
                                                <input type="text" asp-for="CreatedBy" placeholder="Enter Creator" class="form-control" id="basicInput">
                                            </fieldset><br />
                                        </div>
                                        <button type="submit" class="btn btn-success mr-2">Submit</button>
                                        <button type="submit" class="btn btn-dark">Cancel</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- Basic Inputs end -->
            </div>
        </div>
    </div>